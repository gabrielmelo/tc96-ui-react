{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "NodeNext",
		"useDefineForClassFields": true,
		"strict": true,
		"sourceMap": false,
		"declaration": true,
		"jsx": "react-jsx"
	},
	"include": ["src"]
}
