	"version": "0.0.5",
	"files": ["dist"],
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": false,
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js",
			"default": "./dist/index.mjs"
		},
		"./styles.css": "./dist/styles/index.css"
	},
	"scripts": {
		"dev": "storybook dev -p 6006",
