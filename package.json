		"tailwindcss": "^4.0.4",
		"tailwindcss-animate": "^1.0.7"
	},
	"peerDependencies": {
		"react": ">=19",
		"react-dom": ">=19"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
