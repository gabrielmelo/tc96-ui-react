		"lint:staged": "biome check --staged --fix",
		"lint:ci": "biome ci",
		"serve": "vite preview",
		"prepare": "husky",
		"type-check": "tsc --noEmit",
		"test:ci": "echo 'No error found'"
	},
	"dependencies": {
		"@radix-ui/react-avatar": "^1.1.3",
